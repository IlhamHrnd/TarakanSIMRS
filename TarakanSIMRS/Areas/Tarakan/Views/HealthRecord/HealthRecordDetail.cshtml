@using TarakanSIMRS.Areas.Tarakan.Models.HealthRecord
@model HealtRecordDetailViewModel

@section Scripts {
    <script src="~/js/HealthRecord/HealthRecordDetail.js"></script>
    <script>
        var isModeText = "true";
    </script>
}

<div class="d-flex flex-wrap gap-2 mb-2">
    <a class="btn btn-primary flex-grow-1 text-start" data-bs-toggle="offcanvas" data-bs-target="#patientDetail" aria-controls="patientDetail">
        <i class="fa-solid fa-circle-info"></i> Information
    </a>
    <a class="btn btn-outline-primary flex-grow-1 text-start" onclick="backToList()">
        <i class="fa-solid fa-bars"></i> Back To List
    </a>
</div>
<div class="d-flex flex-wrap gap-2 mb-2">
    <a class="btn btn-primary flex-grow-1 text-start" href="#scrollspyIntegratedNote">
        <i class="fas fa-notes-medical"></i> Integrated Notes
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspyMedication">
        <i class="fas fa-pills"></i> Medication
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspySurgicalHistory">
        <i class="fas fa-history"></i> Surgical History
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspyExamOrder">
        <i class="fa-solid fa-laptop-medical"></i> Exam Order
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspyHealthRecord">
        <i class="fa-solid fa-laptop-medical"></i> Health Record
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspyCarePlan">
        <i class="fa-solid fa-user-nurse"></i> Care Plan
    </a>
    <a class="btn btn-outline-primary flex-grow-1" href="#scrollspyScheduling">
        <i class="fa-solid fa-calendar-days"></i> Scheduling
    </a>
</div>
<div class="card" id="scrollspyIntegratedNote">
    <div class="card-header">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <i class="fa-solid fa-prescription-bottle-medical"></i> Integrated Note
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#integratedBar" aria-controls="integratedBar" aria-expanded="false" aria-label="Toggle integratedBar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="integratedBar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Add
                            </a>
                            <ul class="dropdown-menu">
                                @* <li><a class="dropdown-item" href="#">Action</a></li> *@
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Progress Note</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-retweet"></i> PPA note</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Progress Note</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Progress Note</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Progress Note</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="card-body"><div id="integratedNote"></div></div>
</div>
<div class="card" id="scrollspyMedication">
    <div class="card-header">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <i class="fa-solid fa-prescription-bottle-medical"></i> Medication
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#medicationBar" aria-controls="medicationBar" aria-expanded="false" aria-label="Toggle medicationBar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="medicationBar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Add Prescription</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa-solid fa-file"></i> Direct Prescription</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="card-body"><div id="prescriptionHistory"></div></div>
</div>
<div class="offcanvas offcanvas-start" tabindex="-1" id="patientDetail" aria-labelledby="patientDetailLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="patientDetailLabel">@ViewData["Title"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="card">
            <ul class="list-group list-group-flush">
                <li class="list-group-item" id="patientInfo"></li>
                <li class="list-group-item" id="paramedicTeam"></li>
                <li class="list-group-item" id="registrationRefer"></li>
                <li class="list-group-item" id="patientChronic"></li>
                <li class="list-group-item" id="patientRiskStatus"></li>
                <li class="list-group-item" id="patientPathway"></li>
                <li class="list-group-item" id="patientBilling"></li>
                <li class="list-group-item" id="patientAllergy"></li>
                <li class="list-group-item" id="patientDiagnose"></li>
                <li class="list-group-item" id="patientVitalSign"></li>
            </ul>
        </div>
    </div>
</div>
